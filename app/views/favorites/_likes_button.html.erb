<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= micropost.content %></p>
        </div>
        <div>
          <% if current_user == micropost.user %>
            <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% else %>
        
            <% if current_user.like?(micropost) %>
              <%= form_with(model: current_user.likes.find_by(micropost_id: user.id), local: true, method: :delete) do |f| %>
                <%= hidden_field_tag :micropost_id, current_user.id %>
                <%= f.submit 'お気に入り外す', class: 'btn btn-danger btn-block' %>
              <% end %>
            <% else %>
              <%= form_with(model: current_user.likes.build, local: true) do |f| %>
                <%= hidden_field_tag :micropost_id, current_user.id %>
                <%= f.submit 'お気に入りに追加', class: 'btn btn-primary btn-block' %>
              <% end %>
            <% end %>
          
         <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>