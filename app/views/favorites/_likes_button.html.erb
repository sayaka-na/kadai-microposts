<% unless current_user == user %>
  <% if current_user.like?(user) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, current_user.id %>
      <%= f.submit 'お気に入り外す', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, current_user.id %>
      <%= f.submit 'お気に入りに追加', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>